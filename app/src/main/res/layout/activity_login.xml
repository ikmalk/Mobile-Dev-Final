<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_74sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/colorPurpleLight"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/HomeBtnLogin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_74sdp"
            android:layout_weight="1"
            android:backgroundTint="#7B287D"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_24sdp"
            android:gravity="center"

            />

        <Button
            android:id="@+id/AccountBtnLogin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_74sdp"
            android:backgroundTint="#7b287d"
            android:text="Account"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="@dimen/_24sdp"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>

    <Button
        android:id="@+id/SignGmailBtn"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginBottom="400dp"
        android:backgroundTint="#6D64CE"
        android:text="Sign with Gmail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>