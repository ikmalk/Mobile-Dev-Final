<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlv_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/colorPurleDark"
    android:layout_margin="@dimen/_10sdp">

    <ImageView
        android:id="@+id/dlv_trash_ic"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_trash"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"

        />

    <TextView
        android:id="@+id/dlv_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete this note?"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintLeft_toRightOf="@id/dlv_trash_ic"
        app:layout_constraintTop_toTopOf="@id/dlv_trash_ic"
        android:layout_marginStart="@dimen/_5sdp"
        />

    <TextView
        android:id="@+id/dlv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16ssp"
        android:text="Yes"
        android:textColor="@color/colorRedSalmon"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dlv_trash_ic"
        app:layout_constraintRight_toLeftOf="@id/dlv_cancel"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        />

    <TextView
        android:id="@+id/dlv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_16ssp"
        android:text="No"
        android:textColor="@color/colorGray"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dlv_trash_ic"
        android:layout_marginEnd="@dimen/_12sdp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>